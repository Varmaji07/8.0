{
    "version": 2,
    "buildCommand": "cd backend && npm install",
    "builds": [
        {
            "src": "backend/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/user/(.*)",
            "dest": "backend/api/index.js"
        },
        {
            "src": "/jokes",
            "dest": "backend/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}